<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="9"
    android:layout_height="match_parent"
    android:background="@drawable/background_bg"
    tools:context=".PriceFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_price"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolBar">
            <TextView
                android:id="@+id/tv_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:gravity="center"
                android:text="PRICES"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_price"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="50dp"
                card_view:cardElevation="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:text="Текущая цена:"/>
                <TextView
                    android:id="@+id/tv_current_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="III"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="125dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:text="Высокая цена:"/>
                <TextView
                    android:id="@+id/tv_high_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:layout_marginTop="125dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="III"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="200dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:text="Низкая цена:"/>
                <TextView
                    android:id="@+id/tv_low_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="III"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="275dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:text="Цена на начале дня:"/>
                <TextView
                    android:id="@+id/tv_openday_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:layout_marginTop="275dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="III"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="350dp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:text="На конце дня:"/>
                <TextView
                    android:id="@+id/tv_closeday_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="end"
                    android:layout_marginTop="350dp"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="III"/>

                <TextView
                    android:id="@+id/tv_no_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="200dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:text="No Connection!"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



</LinearLayout>